---
import { MdOutlineMailOutline } from "react-icons/md"
import { FaPhoneAlt } from "react-icons/fa"
import { IoLocationSharp } from "react-icons/io5"
import { LuGithub } from "react-icons/lu";
import { LiaLinkedinIn } from "react-icons/lia";
---
<section id="contact" class="py-20 md:py-24 bg-slate-900">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">Let's Work Together</h2>
      <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto">
        Ready to bring your project to life? Let's discuss your vision and create something amazing.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-10 md:gap-12 items-start">
      
      <!-- form input -->
      <div class="glass rounded-2xl p-6 sm:p-8 bg-white/5">
        <form class="space-y-5">
          <div>
            <label class="block text-white text-sm font-medium mb-2">Name</label>
            <input type="text" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:border-primary transition-colors" placeholder="Your full name">
          </div>

          <div>
            <label class="block text-white text-sm font-medium mb-2">Email</label>
            <input type="email" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:border-primary transition-colors" placeholder="your.email@example.com">
          </div>

          <div>
            <label class="block text-white text-sm font-medium mb-2">Message</label>
            <textarea rows="5" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:border-primary transition-colors resize-none" placeholder="Tell me about your project..."></textarea>
          </div>

          <button type="submit" class="w-full bg-gradient-to-r from-primary to-secondary hover:from-secondary hover:to-primary text-white py-3 !rounded-button font-semibold transition-all transform hover:scale-105">
            Send Message
          </button>
        </form>
      </div>

      <!-- contact detais -->
      <div class="space-y-6 md:space-y-8">
        
        <!-- email -->
        <a href="mailto:abhinavshrivastav459@gmail.com" class="flex items-center space-x-4">
          <div class="w-12 h-12 flex items-center justify-center bg-primary rounded-xl">
            <MdOutlineMailOutline color="#FFFFFF" size={24} />
          </div>
          <div>
            <h4 class="text-white font-semibold">Email</h4>
            <p class="text-gray-400 text-sm md:text-lg">abhinavshrivastav459@gmail.com</p>
          </div>
        </a>

        <!-- phone -->
        <a href="tel:+977-9816482921" class="flex items-center space-x-4">
          <div class="w-12 h-12 flex items-center justify-center bg-secondary rounded-xl">
            <FaPhoneAlt color="#FFFFFF" size={24} />
          </div>
          <div>
            <h4 class="text-white font-semibold">Phone</h4>
            <p class="text-gray-400 text-sm md:text-lg">+977 981-648-2921</p>
          </div>
        </a>

        <!-- location -->
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 flex items-center justify-center bg-green-500 rounded-xl">
            <IoLocationSharp color="#FFFFFF" size={24} />
          </div>
          <div>
            <h4 class="text-white font-semibold">Location</h4>
            <p class="text-gray-400 text-sm md:text-lg">Lumbini, Nepal</p>
          </div>
        </div>

        <!-- social links -->
        <div class="pt-6 md:pt-8">
          <h4 class="text-white font-semibold mb-4">Follow Me</h4>
          <div class="flex space-x-4">
            <a href="https://github.com/AbhinavShrivastav12/" target="_blank" class="w-10 h-10 flex items-center justify-center bg-white/10 hover:bg-primary rounded-lg transition-colors">
              <LuGithub color="#FFFFFF" />
            </a>
            <a href="https://www.linkedin.com/in/abhinavshrivastav383g/" target="_blank" class="w-10 h-10 flex items-center justify-center bg-white/10 hover:bg-primary rounded-lg transition-colors">
              <LiaLinkedinIn color="#FFFFFF" />
            </a>
          </div>
        </div>

      </div>

    </div>
  </div>
</section>
