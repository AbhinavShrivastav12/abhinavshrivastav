---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <link
      href="https://fonts.googleapis.com/css2?family=Pacifico&family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- google adsense -->
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4982709709338718"
      crossorigin="anonymous"></script>

    <!-- primary seo -->
    <title>Abhinav Shrivastav | Full Stack Developer</title>
    <meta
      name="description"
      content="Abhinav Shrivastav is a full stack developer skilled in Astro, Next.js, TailwindCSS, JavaScript, TypeScript, Node.js, Express.js and PostgreSQL. View projects and portfolio."
    />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://abhinavshrivastav.com.np" />

    <!-- open graph links for LinkedIn and Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Abhinav Shrivastav | Full Stack Developer"
    />
    <meta
      property="og:description"
      content="Full Stack developer building modern, fast, and responsive web applications."
    />
    <meta property="og:url" content="https://abhinavshrivastav.com.np" />
    <meta
      property="og:image"
      content="https://abhinavshrivastav.com.np/bg-image.jpg"
    />

    <!-- open graph links for twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Abhinav Shrivastav | Full Stack Developer"
    />
    <meta
      name="twitter:description"
      content="Full Stack developer building modern, fast, and responsive web applications."
    />
    <meta
      name="twitter:image"
      content="https://abhinavshrivastav.com.np/bg-image.jpg"
    />
  </head>
  <body class="bg-white">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
